<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns="http://example.com/hello" targetNamespace="http://example.com/hello" elementFormDefault="qualified">
    <xs:element name="getHelloRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="name" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="getHelloResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="message" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>